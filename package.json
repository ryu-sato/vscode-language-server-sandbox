{
	"name": "lsp-sample",
	"description": "A language server example",
	"author": "ryu-sato",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/ryu-sato/vscode-language-server-sandbox"
	},
	"publisher": "vscode-language-server-sandbox",
	"engines": {
		"vscode": "^1.100.0"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./client/out/extension",
	"contributes": {
		"commands": []
	},
	"devDependencies": {
		"typescript": "^5.9.3"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc --build",
